<main class="indexPage">
    <div class="indextitle">
    <h1>All your Heroes</h1>
<a href="/heroes/newHeroes">Create a new hero</a>
</div>

<div class="columns">
    {{#each heroes }} 
    <div class="index-container">
        <a href="/heroes/{{ id }}">
        <img class="indexImg" src="{{ img }}"/>

        </a>

		<h3><a href="/heroes/{{ id }}">{{ heroName }}</a></h3>

    </div>

    {{/each}}

</div>


</main>

