<main>
    <h2>Create a new hero</h2>
    <form action="/heroes" method="POST">
            Hero name:<input type="text" name="heroName" placeholder="name"/><br>
			Gender:<select name="gender">
                  <option value="unknown">Unknown</option>
                 <option value="Male">male</option>
                 <option value="Female">Female</option>
            </select><br>
            teacher: <select name="teacher">
                <option value="yes">yes</option>
                <option value="no">No</option>
            </select><br>
			Hero Status: <select name="heroStatus">
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
                <option value="Former">Former</option>
            </select><br>
			img:<input type="text" name="img" placeholder="img"/><br>
			overview:<input type="text" name="overview" placeholder="overview"/><br>
			quirk: <input type="text" name="quirk" placeholder="quirk"/><br>
            quirk Description: <input type="text" name="quirkDescription" placeholder="quirk Description"/><br>
			<input type="submit" value="Add Hero"/><br>

    </form>
</main>