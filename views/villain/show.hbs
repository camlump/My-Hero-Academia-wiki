    <img src="{{ villain.img }}"/>
    </div>

    <h2>
        {{ villain.name }}

    </h2>
    <br>
    <h3>Gender</h3>
    
    <p>
        {{ villain.gender }}
    </p>
    <br>
    <h3>Status</h3>
   
    <p>
        {{ villain.legalStatus }}
    </p>

    <br>

    <h3>Affiliation</h3>

    <p>
        {{ villain.affiliation }}
    </p>
    <br>

    <h3>Overview</h3>

    <p>
        {{ villain.overview }}
    </p>

    <br>
    <h3>quirk</h3>

    <p>
        {{ villain.quirk }}
